<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color"
    tools:context=".ProductDetailsActivity">

    <FrameLayout
        android:id="@+id/arrow"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:background="@drawable/background_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/eva_arrow_ios_back_fill" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/heart"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:background="@drawable/background_icon"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/heart" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/share"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:background="@drawable/background_icon"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/heart">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/carbon_share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="323dp"
        android:layout_height="323dp"
        android:layout_below="@id/heart"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="245dp"
            android:layout_height="245dp"
            android:src="@drawable/rectangle12"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="323dp"
            android:layout_height="323dp"
            android:src="@drawable/sonyheadphones"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_layout"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/frame_image1"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_image_product_details">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="45dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/sonyheadphones" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_image2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_image_product_details">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="45dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/sonyheadphones" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_image3"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_image_product_details">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="45dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/sonyheadphones" />
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reL1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/ln1"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_description_product">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Sony"
            android:textColor="#343A40"
            android:textSize="22sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="The intuitive and intelligent WH-1000XM4 headphones bring you new improvements in industry-leading noise cancelling technology."
            android:textColor="#909090"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="200 000Ä‘"
            android:textColor="#FF5500"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="94dp"
            android:layout_height="34dp"
            android:layout_below="@id/tvPrice"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_amount_product"
            android:gravity="center">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="-"
                android:textColor="#909090"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="1"
                android:textColor="#909090"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#909090"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="211dp"
            android:layout_height="48dp"
            android:layout_below="@id/tvPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/group45" />
    </RelativeLayout>
</RelativeLayout>